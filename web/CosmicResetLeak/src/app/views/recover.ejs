<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cosmic Reset Leak</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/particles.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

</head>
<body>
    <!-- <div id="particles-js"></div> -->
    <nav class="navbar navbar-expand-lg navbar-light refined-navbar">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">TCT CTF</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-link" href="/login">Login</a>
                    <a class="nav-link" id="registerBtn" href="/register">Register</a>
                </div>
            </div>
        </div>
    </nav>
    <main class="container mt-3">
        <div class="container mt-5">
            <div class="row justify-content-center align-items-center" style="min-height: calc(100vh - 190.8px);">
                <div class="reg-box col-md-6 col-lg-5">
                    <div class="registration-form">
                        <h3>Recover Account</h3>

                        <% if (typeof message !== 'undefined' && message) { %>
                            <div class="ser-error"><%= message %></div>
                        <% } %>
                        <% if (typeof successmessage !== 'undefined' && successmessage) { %>
                            <div class="ser-success"><%= successmessage %></div>
            
                        <% } %>
                        
                        <label class="radio first-radio">
                            <input class="forgot-choice" id="forgot-username" type="radio" name="gender" value="MADAME">
                            <span>Forgot Username</span>
                          </label>
                          <label class="radio">
                            <input class="forgot-choice" id="forgot-password"  type="radio" name="gender" value="MONSIEUR">
                            <span>Forgot Password</span>
                          </label>
                        <div id="email-input" class="form-group input-control mb-3" style="display: none;">
                            <form method="post" action="/recover">
                                <input type="hidden" id="credential-type" name="credential" value="">
                                <input type="email" class="form-control custom-input" id="email" name="email" required placeholder="Enter Your Email">
                                <button type="submit" class="choice-submit">Submit</button>
                            </form>
                        </div>
                        <!-- <button class="back-btn"><a href="/login">Back</a></button> -->
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script>
        document.getElementById('forgot-username').addEventListener('click', function() {
            document.getElementById('credential-type').value = 'username';
            document.getElementById('email-input').style.display = 'block';
        });
        document.getElementById('forgot-password').addEventListener('click', function() {
            document.getElementById('credential-type').value = 'password';
            document.getElementById('email-input').style.display = 'block';
        });
    </script>

 
    <script src="js/particle-settings.js"></script>
    <script src="js/script.js"></script>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
